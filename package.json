{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "description": "Implementação do https://www.tabnews.com.br feita no https://curso.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatheusKerscher/clone-tabnews.git"
  },
  "bugs": {
    "url": "https://github.com/MatheusKerscher/clone-tabnews/issues"
  },
  "homepage": "https://github.com/MatheusKerscher/clone-tabnews#readme",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "next build --turbopack",
    "start": "next start",
    "test": "npm run services:up && concurrently -k -n next,jest -s command-jest --hide next \"next dev --turbopack\" \"jest -i --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest -i --watchAll --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:wait:database": "node infra/scripts/wait-for-postgres.ts",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migrations:create": "node-pg-migrate create -m infra/migrations",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:eslint:check": "eslint .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepare": "husky",
    "commit": "cz",
    "update-dependencies": "npx npm-check-updates -i"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "16.0.3",
    "node-pg-migrate": "8.0.3",
    "pg": "8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/eslintrc": "3",
    "@types/async-retry": "1.4.9",
    "@types/jest": "30.0.0",
    "@types/node": "20",
    "@types/pg": "8.15.6",
    "@types/react": "19",
    "@types/react-dom": "19",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.1.0",
    "husky": "9.1.7",
    "init": "0.1.2",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "typescript": "5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
