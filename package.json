{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "description": "Implementação do https://www.tabnews.com.br feita no https://curso.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatheusKerscher/clone-tabnews.git"
  },
  "bugs": {
    "url": "https://github.com/MatheusKerscher/clone-tabnews/issues"
  },
  "homepage": "https://github.com/MatheusKerscher/clone-tabnews#readme",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev --turbopack",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest -i",
    "test:watch": "jest -i --watchAll",
    "migration:create": "node-pg-migrate create -m infra/migrations",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.ts"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "15.5.4",
    "node-pg-migrate": "8.0.3",
    "pg": "8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
    "@types/jest": "30.0.0",
    "@types/node": "20",
    "@types/pg": "8.15.5",
    "@types/react": "19",
    "@types/react-dom": "19",
    "eslint": "9",
    "eslint-config-next": "15.5.4",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "typescript": "5"
  }
}