{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "Implementação do https://www.tabnews.com.br feita no https://curso.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatheusKerscher/clone-tabnews.git"
  },
  "bugs": {
    "url": "https://github.com/MatheusKerscher/clone-tabnews/issues"
  },
  "homepage": "https://github.com/MatheusKerscher/clone-tabnews#readme",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "next build",
    "start": "next start",
    "test": "npm run services:up && concurrently -k -n next,jest -s command-jest --hide next \"next dev\" \"jest -i --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest -i --watchAll --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migrations:create": "node-pg-migrate create -m infra/migrations",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:eslint:check": "eslint .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepare": "husky",
    "commit": "cz",
    "update-dependencies": "npx npm-check-updates -i"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.1.1",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "nodemailer": "7.0.5",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "set-cookie-parser": "2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
